        <padding android:left="10dp" android:right="10dp" android:top="10dp" android:bottom="10dp"/>
        <solid android:width="2dp" android:color="@color/purple"/>
        <stroke android:width="2dp" android:color="@color/veryLightBlue"/>
    </shape>
</item>
</selector>